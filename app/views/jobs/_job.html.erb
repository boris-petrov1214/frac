<li>
  <a href="/jobs/detail?id=<%= job.id %>" class="job">
    <span class="job-name">
        <%= job.name %>
    </span>
    <span class="stage">
        Stage <%= job.current_stage.to_s %>
    </span>
    <span class="status">
        <%
           @current_stage = job.stages.find_by(:stage_no => job.current_stage)
           concat statuses.find(@current_stage.status_id).name
        %>
    </span>
  </a>
</li>